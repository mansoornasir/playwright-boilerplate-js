{
  "name": "playwright-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --require src/step-definitions/**/*.js --require src/support/hooks.js --format summary src/features/**/*.feature --publish-quiet",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "lint": "npx eslint --config src/config/eslint.config.js .",
    "lint:fix": "npx eslint --config src/config/eslint.config.js . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,html,js}\" ",
    "only": "cucumber-js --require src/step-definitions/**/*.js --require src/support/hooks.js --format summary src/features/**/*.feature --publish-quiet --tags @only",
    "smoke": "cucumber-js --require src/step-definitions/**/*.js --require src/support/hooks.js --format summary src/features/**/*.feature --publish-quiet --tags @smoke",
    "test:parallel": "cucumber-js --parallel=2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.46.0",
    "@types/node": "^22.2.0",
    "allure-commandline": "^2.30.0",
    "allure-playwright": "^3.0.0-beta.9",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "allure-cucumberjs": "^2.0.0-beta.26",
    "allure-js-commons": "^2.0.0-beta.26"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0"
  }
}
